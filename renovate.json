{
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "groupName": "TypeScript and JS tools",
      "matchPackagePatterns": ["typescript", "eslint", "node"],
      "matchPackageNames": ["globals", "ora", "commander", "ajv"]
    },
    {
      "groupName": "AWS",
      "matchPackagePatterns": ["aws", "cdk", "constructs"]
    },
    {
      "groupName": "Python dependencies",
      "matchManagers": ["uv", "pip_requirements", "pip-compile"],
      "matchPackagePatterns": [".*"]
    }
  ]
}
