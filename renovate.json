{
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "groupName": "TypeScript and JS tools",
      "matchPackageNames": [
        "globals",
        "ora",
        "commander",
        "ajv",
        "/typescript/",
        "/eslint/",
        "/node/"
      ]
    },
    {
      "groupName": "AWS",
      "matchPackageNames": [
        "/aws/",
        "/cdk/",
        "/constructs/"
      ]
    },
    {
      "groupName": "Python dependencies",
      "matchManagers": [
        "uv",
        "pip_requirements",
        "pip-compile"
      ],
      "matchPackageNames": [
        "/.*/"
      ]
    }
  ]
}
