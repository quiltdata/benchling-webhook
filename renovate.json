{
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "groupName": "TypeScript and JS tools",
      "matchPackageNames": [
        "globals",
        "ora",
        "commander",
        "ajv",
        "esbuild",
        "dotenv",
        "dotenv-expand",
        "/typescript/",
        "/eslint/",
        "/node/"
      ]
    },
    {
      "groupName": "AWS",
      "matchPackageNames": [
        "/aws/",
        "/cdk/",
        "/constructs/"
      ]
    },
    {
      "groupName": "Python dependencies",
      "matchFileNames": ["docker/**"],
      "matchPackageNames": ["/./"]
    }
  ]
}
