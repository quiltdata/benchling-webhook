# ==============================================================================
# REQUIRED USER VALUES (Set these BEFORE running deployment)
# ==============================================================================

# ==============================================================================
# AWS CDK Configuration
# ==============================================================================
# AWS account and region for CDK deployment
CDK_DEFAULT_ACCOUNT=your-aws-account-id
CDK_DEFAULT_REGION=us-east-1

# ==============================================================================
# S3 and Quilt Configuration
# ==============================================================================
# S3 bucket must be in the same region as your Quilt CloudFormation stack
BUCKET_NAME=your-data-bucket
S3_BUCKET_NAME=your-data-bucket
PREFIX=benchling-webhook
QUILT_CATALOG=your-catalog.quiltdata.com
QUILT_DATABASE=your-athena-database

# ==============================================================================
# SQS Queue Configuration
# ==============================================================================
# QUEUE_NAME: Use the name of the "PackagerQueue" from your Quilt stack
# This allows the BenchlingWebhookStack to send messages to the Quilt Packaging Engine
QUEUE_NAME=your-quilt-stack-PackagerQueue-xxxxx
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/your-aws-account-id/your-queue-name

# ==============================================================================
# Benchling Configuration
# ==============================================================================
# BENCHLING_TENANT: Use XXX if you login to benchling at XXX.benchling.com
BENCHLING_TENANT=your-tenant
BENCHLING_CLIENT_ID=your-client-id
BENCHLING_CLIENT_SECRET=your-client-secret
BENCHLING_APP=benchling-webhook
BENCHLING_API_KEY=your-api-key
BENCHLING_APP_DEFINITION_ID=appdef_your_id_here
ENABLE_WEBHOOK_VERIFICATION=true  # Set to false ONLY for local development. Production MUST have this enabled

# Test Configuration
BENCHLING_TEST_ENTRY=etr_123456789  # Required for running tests

# ==============================================================================
# OPTIONAL VALUES (Defaults provided, override if needed)
# ==============================================================================

# Flask Configuration
FLASK_ENV=production  # Options: development (human-readable logs), production (JSON logs)
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default  # Optional: for local development

# Webhook Configuration
PKG_PREFIX=benchling
PKG_KEY=experiment_id
PKG_BUCKET_ONLY=false  # Set to true to restrict searches to only the configured bucket
# WEBHOOK_ALLOW_LIST="34.216.192.90,34.217.183.162,52.27.154.149,208.82.100.85"  # Optional: comma-separated source IPs

# Ngrok Configuration (optional - for local development)
# Get your authtoken from: https://dashboard.ngrok.com/get-started/your-authtoken
NGROK_AUTHTOKEN=your_ngrok_authtoken_here
NGROK_DOMAIN=your-subdomain.ngrok-free.app  # Optional: set your custom ngrok domain
